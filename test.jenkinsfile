//===-*- Groovy -*-===

pipeline {
    parameters {
        string(name: 'JSON_PARAM', defaultValue: '', description: 'json')
    }
    agent {
        label any
    }
    stages {
        stage('Information') {
            steps {
                println("start profile parsing...")
            }
        }
        stage('Process') {
            steps {
                dir("$WORKSPACE") {
                    script {
                        println("params: ${params.JSON_PARAM}")
                        def param_json = readJSON text: "${params.JSON_PARAM}"
                        println(param_json)
                        println(param_json['num'])
                        println(param_json['cases'])
                        println(param_json['cases'][0])
                        println(param_json['cases'][0]['name'])
                    }
                }
            }
        }
    }
}