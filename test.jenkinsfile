//===-*- Groovy -*-===

pipeline {
    parameters {
        string(name: 'JSON_PARAM', defaultValue: '', description: 'json')
    }
    agent {
        label 'linux-sc5-sc7'
    }
    stages {
        stage('Information') {
            steps {
                println("start profile parsing...")
            }
        }
        stage('Process') {
            steps {
                dir("$WORKSPACE") {
                    script {
                        println("params: ${params.JSON_PARAM}")
                        def param_json = readJSON text: "${params.JSON_PARAM}"
                        println(param_json['name'])
                        println(param_json['num'])
                        println(param_json['sites'])
                        println(param_json['sites'][0])
                        println(param_json['sites'][0]['name'])
                    }
                }
            }
        }
    }
}